{
    "compilerOptions": {
        "composite": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "importHelpers": true,
        "isolatedModules": true,
        "lib": ["es2022"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2022",
        "customConditions": ["@riftbound-tcg/source"],
        "allowImportingTsExtensions": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@riftbound-tcg/game": ["libs/game/src/lib/index.ts"],
            "@enums": ["libs/game/src/enums/index.ts"],
            "@enums/*": ["libs/game/src/enums/*"],
            "@models": ["libs/game/src/models/index.ts"],
            "@models/*": ["libs/game/src/models/*"],
            "@interfaces": ["libs/game/src/interfaces/index.ts"],
            "@interfaces/*": ["libs/game/src/interfaces/*"]
        }
    }
}
