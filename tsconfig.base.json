{
    "compilerOptions": {
        "composite": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "importHelpers": true,
        "isolatedModules": true,
        "lib": ["es2022"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2022",
        "customConditions": ["@riftbound-tcg/source"],
        "allowImportingTsExtensions": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            // Shared libraries
            "@riftbound-tcg/game": ["libs/game/src/lib/index.ts"],

            // Library internals (for library development)
            "@enums/*": ["libs/game/src/enums/*"],
            "@models/*": ["libs/game/src/models/*"],

            // App-specific (namespaced to avoid conflicts)
            "@ui/*": ["apps/ui/src/*"],
            "@api/*": ["apps/api/src/*"]
        }
    }
}
